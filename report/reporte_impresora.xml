<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <template id="reporte_impreso" name="exe_reporte_remito.reporte_impreso">
      <t t-call="web.basic_layout">
        <t t-foreach="docs" t-as="o">
          <div class="page" style="position: relative; font-family: Helvetica, Arial, sans-serif; font-size: 12px; width: 100%; height: 100%;">

             <div style="position: absolute; top: 2.5cm; left: 14.5cm; width: 4cm; text-align: left;">
                <span t-field="o.scheduled_date" t-options='{"widget": "date"}'/>
            </div> 
            

            <!-- <div style="position: absolute; top: 5.8cm; left: 0; width: 100%;"> -->
            <div style="position: absolute; top: 6.8cm; left: 0; width: 100%;">
                
                <div style="position: relative; height: 0.8cm;">
                    <span style="position: absolute; left: 4.5cm; width: 9cm;" t-field="o.partner_id.name"/>
                    <!-- <span style="position: absolute; left: 2.5cm; width: 9cm;" t-field="o.partner_id.name"/> -->
                    <!-- <span style="position: absolute; left: 14.0cm;" t-esc="o.partner_id.l10n_ar_afip_responsibility_type_id.name or o.partner_id.property_account_position_id.name or ''"/> -->
                    <span style="position: absolute; left: 15.5cm;" t-esc="o.partner_id.l10n_ar_afip_responsibility_type_id.name or o.partner_id.property_account_position_id.name or ''"/>
                </div>

                <div style="position: relative; height: 0.8cm;">
                    <span style="position: absolute; left: 4.5cm; width: 9cm;" t-esc="o.partner_id.phone"/>
                     <!-- <span style="position: absolute; left: 2.5cm; width: 9cm;" t-esc="o.partner_id.phone"/> -->
                    <!-- <span style="position: absolute; left: 14.0cm;" t-field="o.partner_id.vat"/> -->
                    <span style="position: absolute; left: 15.5cm;" t-field="o.partner_id.vat"/>
                </div>

                <div style="position: relative; height: 0.8cm;">
                    <span style="position: absolute; left: 4.5cm; width: 9cm;" t-field="o.partner_id.street"/>
                    <!-- <span style="position: absolute; left: 2.5cm; width: 9cm;" t-field="o.partner_id.street"/> -->
                    <!-- <span style="position: absolute; left: 14.0cm;" t-field="o.origin"/> -->
                    <span style="position: absolute; left: 15.5cm;" t-field="o.origin"/>
                </div>

                <div style="position: relative; height: 0.8cm;">
                    <!-- <span style="position: absolute; left: 2.5cm; width: 9cm;"> -->
                    <span style="position: absolute; left: 4.5cm; width: 9cm;">
                        <t t-esc="o.partner_id.city"/> 
                        <t t-if="o.partner_id.state_id"> (<t t-esc="o.partner_id.state_id.name"/>)</t>
                    </span>
                    <!-- <span style="position: absolute; left: 14.0cm;" t-field="o.name"/> -->
                    <span style="position: absolute; left: 15.5cm;" t-field="o.name"/>
                </div>
            </div>

            <!-- <div style="position: absolute; top: 10.5cm; left: 0; width: 100%;"> -->
            <div style="position: absolute; top: 11.5cm; left: 0; width: 100%;"
                <table style="width: 100%; border-collapse: collapse; border: none;">
                    <tbody>
                        <t t-foreach="o.move_ids_without_package" t-as="l">
                            <tr style="height: 0.6cm; vertical-align: top;"> 
                                
                                <!-- <td style="width: 5%; text-align: center; padding-left: 5px;">
                                    
                                     <span t-field="l.product_id.name"/>
                                 </td> -->
                                  <td style="width: 5%; text-align: center;">
                                    <span t-esc="l_index + 1"/>
                                </td>

                                <td style="width: 10%; text-align: center;">
                                    <span t-esc="l.product_uom_qty" t-options='{"widget": "float", "precision": 0}'/>
                                </td>

                                <td style="width: 15%; padding-left: 5px;">
                                    <span t-field="l.product_id.default_code"/>
                                </td>

                                <td style="width: 70%; padding-left: 5px;">
                                    <span t-field="l.description_picking"/>
                                    </td>

                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>

            <div style="position: absolute; top: 24cm; left: 1cm; width: 12cm;">
                <span t-field="o.note"/>
            </div>

          </div>
        </t>
      </t>
    </template>

    <record id="action_report_remito" model="ir.actions.report">
      <field name="name">Remito Preimpreso</field>
      <field name="model">stock.picking</field>
      <field name="report_type">qweb-pdf</field>
      <field name="report_name">exe_reporte_remito.reporte_impreso</field>
      <field name="report_file">exe_reporte_remito.reporte_impreso</field>
      <field name="binding_model_id" ref="stock.model_stock_picking"/>
      <field name="binding_type">report</field>
    </record>

  </data>
</odoo>